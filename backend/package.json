  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/joi": "^17.2.3",
    "@types/node": "^20.19.15",
    "@types/pino": "^7.0.4",
    "@types/redis": "^4.0.10",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.1.4",
